<% include ../partials/header-start %>
<% include ../partials/header-end %>

<h1 class="header">Login</h1>

<% if (error) { %>
    <h2>There was an error loading this page.</h2>
    <h4>Please contact a system administrator and quote this message:</h4>

    <h3><%= error %></h3>
<% } %>

<div class="form-container">
    <div class="form" id="login-form">
        <p class="form-header">Please enter your username and password to log in:</p>

        <div class="form-group">
            <span class="field">Username</span>
            <input id="username-input" type="text" placeholder="Type here..">
        </div>

        <div class="form-group">
            <span class="field">Password</span>
            <input id="password-input" type="password" placeholder="Type here..">
        </div>

        <a class="button" id="login-button" href="#">Login</a>

        <p class="form-error"></p>
        <p class="form-success"></p>
    </div>
</div>

<h4 id="error-message" style="display: none;"></h4>

<!-- Scripts -->
<script src="/scripts/lib/utils.js"></script>
<script src="/scripts/index/login.js"></script>

<% include ../partials/footer %>